<% for (const [category, tasksList] of Object.entries(tasks)) { %>
    <p><%= category %></p>
    <% if (tasksList.length > 0) { %> 
        <div class="grid">
            <% for (let task of tasksList) { %>
               <%- include(('./task.ejs'), {task: task}); %>
            <% } %>
        </div>
    <% } else {%>
        <p>No Tasks Found !</p>
    <% } %>
<% } %>