<div class="container">
<% for (const [status, tasksList] of Object.entries(tasks)) { %>
    <div class="task__div">
        <h3 class="status_title"><%= status %></h3>
        <% if (tasksList.length > 0) { %> 
            <div>
                <% for (let task of tasksList) { %>
                   <%- include(('./task.ejs'), {task: task}); %>
                <% } %>
            </div>
        <% } else {%>
            <p style="margin-left: 25px;">No Tasks Found !</p>
        <% } %>
        <i class="fas fa-plus add-task-status"><a href="task/add-task/" style="margin-left:10px;"> + Add a Task</a></i>
    </div>
<% } %>
</div>
